{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "~apis/*": ["src/apis/*"],
      "~assets/*": ["src/assets/*"],
      "~components/*": ["src/components/*"],
      "~configs/*": ["src/configs/*"],
      "~contexts/*": ["src/contexts/*"],
      "~guards/*": ["src/guards/*"],
      "~hooks/*": ["src/hooks/*"],
      "~layouts/*": ["src/layouts/*"],
      "~lib/*": ["src/lib/*"],
      "~pages/*": ["src/pages/*"],
      "~routes/*": ["src/routes/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
